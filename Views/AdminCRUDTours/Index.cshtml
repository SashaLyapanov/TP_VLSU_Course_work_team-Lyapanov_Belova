@model IEnumerable<TravelAgency_Prod.Models.Tour>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_LayoutAdmManag";
}

<div>
    <section class="section-3">
        <div class="blur">
            @{
                <div class="container-section-3" id="container-section-3">
                    <div class="search-box">
                        <input class="search-txt-1" type="text" name="" placeholder="Страна">
                        <input class="search-txt" type="date" name="" placeholder="Дата отъезда">
                        <input class="search-txt" type="date" name="" placeholder="Дата приезда">
                        <input class="search-txt-2" type="text" name="" placeholder="Количество людей">
                        <a class="search-btn" href="">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </a>
                    </div>
                </div>


                <section class="section-for-creating-btn">
                    <a asp-action="Create">Создать новый тур</a>
                </section>


            @foreach (var tour in Model)
                {

                    <div class="container-section-3" id="container-section-3-1">
                        <a class="element-tour" asp-controller="AdminCRUDTours" asp-action="Details" asp-route-id="@tour.Id">
                            <div class="element-tour-1">
                                <div class="img-tour"></div>
                                <div class="inf-tour" id="inf-tour-1">
                                    <h1 class="dataTour1" id="dataTour-1">Тур:</h1>
                                    <p class="dataTour1">Страна:</p>
                                    <p class="dataTour1">Кличество человек:</p>
                                    <p class="dataTour1">Количество дней:</p>
                                    <p class="dataTour1">Тип тура:</p>
                                    <p class="dataTour1">Наличие:</p>
                                </div>
                                <div class="inf-tour" id="inf-tour-2">
                                    <h1 class="dataTour" id="dataTour-1">@Html.DisplayFor(modelItem => tour.Name)</h1>
                                    <p class="dataTour">@Html.DisplayFor(modelItem => tour.Country)</p>
                                    <p class="dataTour">@Html.DisplayFor(modelItem => tour.PersonCount)</p>
                                    <p class="dataTour">@Html.DisplayFor(modelItem => tour.Duration)</p>
                                    <p class="dataTour">
                                        @{
                                            string massageCategory;
                                            if (tour.CategoryId == 1)
                                            {
                                                massageCategory = "All inclusive";
                                            }
                                            else
                                            {
                                                massageCategory = "Business";
                                            }
                                        }
                                        @massageCategory
                                    </p>
                                    <p class="dataTour">
                                        @{
                                            string massageAvailable;
                                            if (tour.Available == true)
                                            {
                                                massageAvailable = "Данный тур доступен";
                                            }
                                            else
                                            {
                                                massageAvailable = "Данный тур недоступен";
                                            }
                                        }
                                        @massageAvailable
                                    </p>
                                    <p class="dataTour" id="dataTour-cost">@Html.DisplayFor(modelItem => tour.Cost),00 $</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </section>
</div>              

