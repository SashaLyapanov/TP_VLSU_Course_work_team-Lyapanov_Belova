@model TravelAgency_Prod.Models.Tour

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "_LayoutAdmin";
}


<div class="row-favorite">
    
    <div class="col-md-4 container-register container-style">
        <h1>Редактитровать</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input class="style-register" type="hidden" asp-for="Id" />
<div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input class="style-register" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input class="style-register" asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input class="style-register" asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonCount" class="control-label"></label>
                <input class="style-register" asp-for="PersonCount" class="form-control" />
                <span asp-validation-for="PersonCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input class="style-register"  asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentDate" class="control-label"></label>
                <input class="style-register" asp-for="DepartmentDate" class="form-control" />
                <span asp-validation-for="DepartmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input class="style-register" asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Available" class="control-label"></label>
                <input   asp-for="Available" id="Available" name="Available" type="checkbox" value="true" />
                <span asp-validation-for="Available" class="text-danger">Да</span>
                <input  asp-for="Available" id="Available" name="Available" type="checkbox" value="false" />
                <span asp-validation-for="Available" class="text-danger">Нет</span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel" class="control-label"></label>
                <input class="style-register" asp-for="Hotel" class="form-control" />
                <span asp-validation-for="Hotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input class="style-register" asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img" class="control-label"></label>
                <input class="style-register" asp-for="img" class="form-control" />
                <span asp-validation-for="img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input class="style-register" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-otpravit" /> |
                <a class="btn btn-primary btn-otpravit" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
