@model TravelAgency_Prod.Models.Client

@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4 container-register container-style">
        <h1 class="register">Регистрация</h1>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input class="style-register" asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input class="style-register" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input class="style-register" asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input class="style-register" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input class="style-register" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pasport" class="control-label"></label>
                <input class="style-register" asp-for="Pasport" class="form-control" />
                <span asp-validation-for="Pasport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZagranPasport" class="control-label"></label>
                <input class="style-register" asp-for="ZagranPasport" class="form-control" />
                <span asp-validation-for="ZagranPasport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input class="style-register" asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visa" class="control-label"></label>
                <input class="style-register" asp-for="Visa" class="form-control" />
                <span asp-validation-for="Visa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary btn-otpravit" />
            </div>
        </form>
        <div>
            <a asp-action="Home/Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

