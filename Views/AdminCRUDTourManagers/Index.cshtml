@model IEnumerable<TravelAgency_Prod.Models.TourManager>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_LayoutAdmin";
}
<div class="row-favorite">
<p>
        <a asp-action="Create" class="btn-otpravit create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-otpravit-1">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-otpravit-1">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-otpravit-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>


